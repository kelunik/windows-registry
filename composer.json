{
    "name": "amphp/windows-registry",
    "description": "Windows Registry Reader.",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Niklas Keller",
            "email": "me@kelunik.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Amp\\WindowsRegistry\\": "lib"
        }
    },
    "require": {
        "php": ">=7.3",
        "ext-async": "*",
        "amphp/amp": "dev-ext-async",
        "amphp/byte-stream": "dev-ext-async"
    },
    "require-dev": {
        "amphp/php-cs-fixer-config": "dev-ext-async"
    },
    "config": {
        "platform": {
            "php": "7.3.0"
        }
    },
    "scripts": {
        "check": [
            "@code-style",
            "@test"
        ],
        "code-style": "php-cs-fixer fix -v --diff --dry-run",
        "fix-code-style": "php-cs-fixer fix -v --diff"
    }
}
